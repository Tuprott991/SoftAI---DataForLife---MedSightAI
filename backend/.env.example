# ======================
# Application Settings
# ======================
APP_NAME=MedSight AI Backend
APP_VERSION=1.0.0
DEBUG=False

# ======================
# Server Settings
# ======================
HOST=0.0.0.0
PORT=8000

# ======================
# Database - PostgreSQL (Neon)
# ======================
# Format: postgresql://username:password@host:port/database
# Example: postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/medsight_db
DATABASE_URL=postgresql://your_username:your_password@your_neon_host/your_database
DB_ECHO=False

# ======================
# AWS S3 Configuration
# ======================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-medsight-bucket
S3_ORIGINAL_IMAGES_PREFIX=original/
S3_PROCESSED_IMAGES_PREFIX=processed/
S3_ANNOTATED_IMAGES_PREFIX=annotated/

# ======================
# Milvus Vector Database
# ======================
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=medsight_cases
MILVUS_DIMENSION=512

# ======================
# CORS Settings
# ======================
# Comma-separated list of allowed origins
# Example: http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ======================
# Security
# ======================
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ======================
# AI Model Paths
# ======================
MODEL_INFERENCE_PATH=../MedSightAI
MEDGEMMA_PATH=../medgemma
VINDR_DATASET_PATH=../VindrDataset

# ======================
# File Upload Settings
# ======================
MAX_UPLOAD_SIZE=10485760
